{
  "name": "nodejs-boilerplate",
  "version": "0.0.1",
  "description": "Node.js Boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon -e js,env --ignore envs/ --ignore tests/ --ignore docs/",
    "test": "snyk test && nsp check && node node_modules/eslint/bin/eslint.js ./src ./test && npm run coveralls",
    "test-dev": "jest",
    "lint": "node node_modules/eslint/bin/eslint.js ./src ./test",
    "security-check": "snyk test && nsp check",
    "coveralls": "jest --coverage && cat coverage/lcov.info | ./node_modules/.bin/coveralls"
  },
  "repository": "git+https://github.com/vitorsalgado/nodejs-bootstrap.git",
  "keywords": [
    "nodejs",
    "koa",
    "boilerplate"
  ],
  "author": "Vitor Hugo Salgado <vsalgadopb@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/vitorsalgado/nodejs-bootstrap/issues"
  },
  "homepage": "https://github.com/vitorsalgado/nodejs-bootstrap#readme",
  "dependencies": {
    "dotenv": "^4.0.0",
    "joi": "^10.2.2",
    "kcors": "2",
    "koa": "^2.2.0",
    "koa-mount": "^2.0.0",
    "koa-router": "^7.0.0",
    "koa-send": "^3.3.0",
    "koa-static": "^3.0.0",
    "mongoose": "^4.9.6"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.4.1",
    "coveralls": "^2.12.0",
    "eslint": "^3.18.0",
    "eslint-config-nodesecurity": "^1.3.1",
    "eslint-config-standard": "^7.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^2.1.1",
    "jest": "^19.0.2",
    "nsp": "^2.6.3",
    "snyk": "^1.25.2",
    "supertest": "^3.0.0"
  },
  "jest": {
    "notify": false,
    "collectCoverage": true,
    "coverageDirectory": "reports/coverage",
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    }
  }
}
